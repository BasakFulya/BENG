@model  IEnumerable<blogging.Models.CATEGORY>
    @{ }

<div class="sidebox widget">
    <h3 class="widget-title section-title">Categories</h3>
    <ul class="circled">
        @foreach (blogging.Models.CATEGORY category in Model)
        {

            <li><a href="/Category/Index/@category.CategoryID">@category.Name (@category.ARTICLEs.Count)</a></li>
        }


    </ul>
</div>
